%h1 Listing users

%table
  %thead
    %tr
      %th Email
      %th Role
      %th Actions
  %tbody
  - @users.each do |user|
    %tr
      %td= link_to user.email, user
      %td= user.role.title.capitalize
      %td
        = link_to('Show', user)
        ||
        = link_to 'Edit', edit_user_path(user)
        ||
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete
